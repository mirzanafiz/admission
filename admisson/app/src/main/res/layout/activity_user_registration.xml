<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".UserRegistration">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainRegiName2"
            android:layout_marginTop="85dp"
            android:layout_toEndOf="@+id/mainRegiName"
            android:layout_toRightOf="@+id/mainRegiName"
            android:password="false"
            android:minWidth="210dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainRegiEmail2"
            android:minWidth="210dp"
            android:layout_alignBottom="@+id/mainRegiEmail"
            android:layout_toRightOf="@+id/mainRegiName"
            android:layout_toEndOf="@+id/mainRegiName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainRegiName"
            android:text="@string/mainRegiName"
            android:textSize="20dp"
            android:layout_alignBottom="@+id/mainRegiName2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <View
            android:id = "@+id/empty_view"
            android:layout_height = "50dp"
            android:layout_width = "match_parent"
            android:visibility="invisible"

            android:layout_below="@+id/mainRegiName2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <View
            android:id = "@+id/empty_view2"
            android:layout_height = "50dp"
            android:layout_width = "match_parent"
            android:visibility="invisible"

            android:layout_below="@+id/mainRegiEmail2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainRegiEmail"
            android:text="@string/mainRegiEmail"
            android:textSize="20dp"
            android:layout_below="@+id/empty_view"
            android:layout_toLeftOf="@+id/mainRegiName2"
            android:layout_toStartOf="@+id/mainRegiName2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/headingRegistration"
            android:text="@string/headingRegistration"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainRegiNextButton"
            android:layout_below="@+id/regiPass2"
            android:text="@string/NextButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="54dp"
            android:onClick="insert"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="password"
            android:id="@+id/regiPass"
            android:textSize="20dp"
            android:layout_below="@+id/empty_view2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:minWidth="210dp"
            android:layout_height="wrap_content"
            android:id="@+id/regiPass2"
            android:layout_alignBottom="@+id/regiPass"
            android:layout_toRightOf="@+id/mainRegiName"
            android:layout_toEndOf="@+id/mainRegiName" />
    </RelativeLayout>
</ScrollView>
